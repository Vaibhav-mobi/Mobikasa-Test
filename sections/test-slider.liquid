<section class="container">
    <div class="section2txt">
        <p class="shopByC fontGaramond ">{{ section.settings.sectionT }}</p>
    </div>
    <div class="imageSlider">
        {% for block in section.blocks %}
        <img class="testimg" src="{{ block.settings.imagePick |img_url: 'small' }}" alt="followImg" />
        <p class="shopByC fontGaramond ">{{ section.settings.sectionB }}</p>
        {% endfor %}
    </div>
</section>
{% javascript %}
$(document).ready(function(){
$('.imageSlider').slick({
dots: false,
infinite: true,
speed: 2000,
slidesToShow: 3,

responsive: [
{
breakpoint: 1024,
settings: {
slidesToShow: 5,
slidesToScroll: 1,
infinite: true,
dots:false
}
},
{
breakpoint: 600,
settings: {
slidesToShow: 2.5,
slidesToScroll: 1,
infinite: true,
dots:false
}
}

]
});
});
{% endjavascript %}
{% schema %}
{
"name":"Image Collection",
"settings":[
{
"type":"text",
"id":"sectionT",
"label":"Section Text"
}
],
"blocks":[
{
"name":"Image",
"type":"image_picker",
"settings":[
{
"type": "image_picker",
"id": "imagePick",
"label": "Image"
}
]
}
],
"presets": [
{
"name":"Image Collection",
"category":"collection"
}
]
}
{% endschema %} 
{% style %}
  .testimg{
    width:30%;
  }
{% endstyle %}